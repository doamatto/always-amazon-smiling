{
    "name": "Always Amazon Smiling",
    "version": "1.0.0",
    "description": "A simple tool to redirect you from Amazon's sites to their Amazon Smile counterparts.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.min.js"]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://www.amazon.com/*",
        "*://www.amazon.de/*",
        "*://www.amazon.co.uk/*",
        "*://amazon.com/*",
        "*://amazon.de/*",
        "*://amazon.co.uk/*"
    ],
    "icons": {
        "128": "icon.png"
    },
    "author": "Ronchetto, Matt (doamatto) <hello@doamatto.xyz> (https://doamatto.xyz)",
    "homepage_url": "https://github.com/doamatto/always-amazon-smiling"
}